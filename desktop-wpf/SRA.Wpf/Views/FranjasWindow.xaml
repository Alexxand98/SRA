<Window x:Class="SRA.Wpf.Views.FranjasWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Franjas Horarias" Height="400" Width="600" WindowStartupLocation="CenterScreen">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="InicioTextBox" Width="100" Margin="0,0,10,0" VerticalAlignment="Center" />
            <TextBox x:Name="FinTextBox" Width="100" Margin="0,0,10,0" VerticalAlignment="Center" />
            <Button Content="Agregar" Width="80" Margin="0,20,10,0" Click="Agregar_Click"/>
            <Button Content="Eliminar" Width="80" Margin="0,20,0,0" Click="Eliminar_Click"/>
        </StackPanel>
        <DataGrid x:Name="FranjasGrid" AutoGenerateColumns="True" CanUserAddRows="False" DockPanel.Dock="Bottom"/>
    </DockPanel>
</Window>
