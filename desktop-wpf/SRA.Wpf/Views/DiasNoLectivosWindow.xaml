<Window x:Class="SRA.Wpf.Views.DiasNoLectivosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Días No Lectivos" Height="400" Width="600" WindowStartupLocation="CenterScreen">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
            <DatePicker x:Name="FechaPicker" Width="150" Margin="0,0,10,0"/>
            <TextBox x:Name="MotivoTextBox" Width="200" Margin="0,0,10,0"/>
            <Button Content="Agregar" Width="80" Margin="0,20,10,0" Click="Agregar_Click"/>
            <Button Content="Eliminar" Width="80" Margin="0,20,0,0" Click="Eliminar_Click"/>
        </StackPanel>
        <DataGrid x:Name="DiasGrid" AutoGenerateColumns="True" CanUserAddRows="False" DockPanel.Dock="Bottom"/>
    </DockPanel>
</Window>
